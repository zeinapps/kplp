<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="style_btn_yellow" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_yellow</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="style_btn_yellow_small" parent="@android:style/Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/selector_btn_yellow</item>
    </style>

</resources>