<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ea9528" />
            <gradient android:angle="-90" android:endColor="#ea9528" android:startColor="#ea9528" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#49310b" />
            <solid android:color="#fbab2e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fbad31" />
            <gradient android:angle="-90" android:endColor="#fbad31" android:startColor="#fbad31" />
        </shape></item>

</selector>